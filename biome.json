{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnsafeOptionalChaining": "error"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noExplicitAny": "error",
        "noEvolvingTypes": "error",
        "noExtraNonNullAssertion": "error",
        "noTsIgnore": "error",
        "noUnsafeDeclarationMerging": "error",
        "noConfusingVoidType": "error",
        "noConstEnum": "error"
      },
      "style": {
        "noNonNullAssertion": "error",
        "noEnum": "error",
        "useImportType": "warn",
        "useLiteralEnumMembers": "warn"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
